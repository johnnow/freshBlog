<% include ../header.ejs %>
<div class="container">
    <div class="row">
        <div class="col-md-10">
            <form class="form-horizontal" action="/widget/addWidget" method="post">
                <div class="form-group">
                    <label for="title" class="col-sm-2 control-label">插件标题</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="title" placeholder="title" name="title">
                    </div>
                </div>
                <div class="form-group">
                    <label for="author" class="col-sm-2 control-label">描述</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="desc" placeholder="desc" name="desc">
                    </div>
                </div>

                <div class="form-group">
                    <label for="source" class="col-sm-2 control-label">插件源</label>
                    <div class="col-sm-10">
                        <select class="form-control" name="source">
                            <option value="selector">选择器</option>
                            <option value="threeD">3D</option>
                            <option value="animation">动画</option>
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label for="divCode" class="col-sm-2 control-label">divCode</label>
                    <div class="col-sm-10">
                        <script id="editor1" name="divCode" type="text/plain" style="width:100%;height:500px;"></script>
                    </div>
                </div>

                <div class="form-group">
                    <label for="cssCode" class="col-sm-2 control-label">cssCode</label>
                    <div class="col-sm-10">
                        <script id="editor3" name="cssCode" type="text/plain" style="width:100%;height:500px;"></script>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-default">提交</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

</div>
<script type="text/javascript" charset="utf-8" src="/ueditor/ueditor.config.js"></script>
<script type="text/javascript" charset="utf-8" src="/ueditor/ueditor.all.js"> </script>
<script type="text/javascript" charset="utf-8" src="/ueditor/lang/zh-cn/zh-cn.js"> </script>
<script type="text/javascript" charset="utf-8" src="/ueditor/addCodeHighLight.js"> </script>
<script>
    var ue1 = UE.getEditor('editor1');
    var ue3 = UE.getEditor('editor3');
</script>
<script src="/public/javascripts/prism.js"></script>

<% include ../footer.ejs %>