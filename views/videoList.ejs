<% include header.ejs %>

    <div class="container">
        <h1>视频列表</h1>
        <div class="row">
            <div class="col-md-offset-1 col-md-10">
                <% videoes.forEach(function(video,index){ %>
                <div class="col-xs-6 col-md-3">
                    <a href="/video/<%=video._id%>" class="sharpThumb">
                        <img style="width:100%;height:100%;" src="/public/images/<%=video.albumImg%>" alt="视频封面照"/>
                    </a>
                    <div class="caption">
                        <h3><%=video.title%></h3>
                    </div>
                </div>
                <% }); %>
            </div>
        </div>
    </div>


<% include footer.ejs %>