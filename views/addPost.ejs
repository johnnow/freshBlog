<% include header.ejs %>
<div class="container">
    <div class="row">
        <div class="col-md-10">
            <form class="form-horizontal" action="/post/addPost" method="post">
                <div class="form-group">
                    <label for="title" class="col-sm-2 control-label">文章标题</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="title" placeholder="title" name="title">
                    </div>
                </div>
                <div class="form-group">
                    <label for="author" class="col-sm-2 control-label">作者</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="author" placeholder="author" name="author">
                    </div>
                </div>

                <div class="form-group">
                    <label for="author" class="col-sm-2 control-label">上级集合</label>
                    <div class="col-sm-10">
                        <select class="form-control" name="super">
                            <option value="none">无</option>
                            <option value="ali">阿里路呀</option>
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label for="author" class="col-sm-2 control-label">标签</label>
                    <div class="col-sm-10">
                        <select class="form-control" name="tags">
                            <option value="javascript">javascript</option>
                            <option value="css">css</option>
                            <option value="html">html</option>
                            <option value="mess">杂</option>
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label for="author" class="col-sm-2 control-label">文章内容</label>
                    <div class="col-sm-10">
                        <textarea id="editor_id" name="content" style="width:780px;height:300px;">
                        </textarea>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-default">提交</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

</div>
<script charset="utf-8" src="/views/kindeditor/kindeditor-all.js"></script>
<script charset="utf-8" src="/views/kindeditor/lang/zh_CN.js"></script>
<script>
    KindEditor.ready(function(K) {
        var options = {
            cssPath : '/public/stylesheets/default.css',
            filterMode : true,
            items:['source', '|', 'undo', 'redo', '|', 'preview','paste',
                'plainpaste', 'wordpaste', '|', 'justifyleft', 'justifycenter', 'justifyright',
                'justifyfull', 'insertorderedlist', 'insertunorderedlist', 'clearhtml', 'quickformat',
                'fontsize', '|', 'forecolor', 'hilitecolor', 'bold',
                'italic', 'underline', 'strikethrough', 'lineheight', 'removeformat', '|', 'link','/','code','image'],
            htmlTags:{
                pre:["class"],
                code:["class"]
            }
        };
        var editor = K.create('#editor_id', options);
    });
</script>
<script src="/public/javascripts/prism.js"></script>

